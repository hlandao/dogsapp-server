section(data-ng-controller='ClientsController')
    form.form-horizontal(data-ng-submit='create()')
        .control-group
            label.control-label(for='title') Title
            .controls
                input#title(type='text', data-ng-model='title', placeholder='Title')
        .control-group
            label.control-label(for='content') Content
            .controls
                textarea#content(data-ng-model='content', cols='30', rows='10', placeholder='Content')
        .control-group
            .controls
                input.btn(type='submit')
