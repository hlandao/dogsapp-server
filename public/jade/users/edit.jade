section(data-ng-controller='PlacesController', data-ng-init='findOne()')
    form.form-horizontal(data-ng-submit='update()')
        .control-group
            label.control-label(for='title') Title
            .controls
                input#title(type='text', data-ng-model='place.title', placeholder='Title')
        .control-group
            label.control-label(for='content') Content
            .controls
                textarea#content(data-ng-model='place.content', cols='30', rows='10', placeholder='Content')
        .control-group
            .controls
                input.btn(type='submit')
